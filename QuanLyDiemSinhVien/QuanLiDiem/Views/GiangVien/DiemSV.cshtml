@model IEnumerable<Diem>

@{
    ViewData["Title"] = "Điểm Sinh Viên";
}

<link href="~/css/searchCss.css" rel="stylesheet" />

<div class="search-form-container">
    <form action="/" method="post">
        <h2 style="text-align:center">DANH SÁCH ĐIỂM</h2>
        <hr />

        <a asp-controller="GiangVien" asp-action="" class="btn btn-primary btn-sm" style="margin-bottom: 10px">Quay lại</a>

        <!-- Bảng hiển thị danh sách điểm -->
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th style="text-align: center;">Mã học phần</th>
                    <th style="text-align: center;">Số tín chỉ</th>
                    <th style="text-align: center;">Điểm quá trình</th>
                    <th style="text-align: center;">Điểm cuối kỳ</th>
                    <th style="text-align: center;">Điểm 10</th>
                    <th style="text-align: center;">Điểm 4</th>
                    <th style="text-align: center;">Kết quả</th>
                    <th style="text-align: center;">Học kỳ</th>
                    <th style="text-align: center;">Năm học</th>
                    <th style="text-align: center;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaHP)</td>
                        <td>@Html.DisplayFor(modelItem => item.SoTinChi)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiemQuaTrinh)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiemCuoiKy)</td>
                        <td>@item.Diem10.ToString("F2")</td>
                        <td>@item.Diem4.ToString("F2")</td>
                        <td>@Html.DisplayFor(modelItem => item.KetQua)</td>
                        <td>@Html.DisplayFor(modelItem => item.HocKy)</td>
                        <td>@Html.DisplayFor(modelItem => item.NamHoc)</td>
                        <td>
                            <a asp-action="SuaDiem" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Chỉnh sửa
                            </a>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr class="table-empty">
                        <td colspan="10" class="text-center">Không có dữ liệu để hiển thị.</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>
