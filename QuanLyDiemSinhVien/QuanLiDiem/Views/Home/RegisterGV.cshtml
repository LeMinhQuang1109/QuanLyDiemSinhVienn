@model QuanLiDiem.Models.GiangVienRegister

@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5 shadow-lg border-0 card-login">
                <div class="card-header text-center bg-dark text-white">
                    <h2>Đăng Ký</h2>
                </div>
                <div class="card-body p-5" style="background-color: white">

                    <form method="post" asp-action="RegisterGV">
                        <div class="form-group">
                            <b><label for="TenGV">Họ tên</label></b>
                            <input type="text" class="form-control" id="TenGV" name="TenGV" required />
                            <span asp-validation-for="TenGV" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <b><label for="Email">Email</label></b>
                            <input type="text" class="form-control" id="Email" name="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <b><label for="SDT">Số điện thoại</label></b>
                            <input type="text" class="form-control" id="SDT" name="SDT" required />
                            <span asp-validation-for="SDT" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <b><label for="DiaChi">Địa chỉ</label></b>
                            <input type="text" class="form-control" id="DiaChi" name="DiaChi" required />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>

                        </div>
                        <br>
                        <button type="submit" class="btn btn-dark w-100">Đăng Ký</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
